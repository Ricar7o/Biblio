<p id="notice"><%= notice %></p>

  <div class="books">
    <div class="book">
      <%= image_tag(@book.picture, width: "250", alt: @book.title) %>
    </div>
  </div>

  <div class="book_info">
    
      <h4>Title:</h4>
      <p>
      <%= @book.title %>
    </p>

    <p>
      <h4>Author:</h4>
      <%= @book.author %>
    </p>

    <p>
      <h4>ISBN:</h4>
      <%= @book.ISBN %>
    </p>

    <p>
      <h4>Year:</h4>
      <%= @book.year %>
    </p>

    <p>
      <h4>Publisher:</h4>
      <%= @book.publisher %>
    </p>
  </div>

  <div>
    <%= link_to 'Edit', edit_book_path(@book) %> |
    <%= link_to 'Back', books_path %>
  </div>